<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/reserve_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.uph.parkmore.ReserveActivity">

    <TextView
        android:text="$END"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/reserve_end_dt_edit"
        android:textAppearance="@android:style/TextAppearance.Material.Large"
        android:textAllCaps="false"
        android:fontFamily="sans-serif"
        android:textColor="?android:attr/textColorLink"
        android:layout_below="@+id/reserve_label_end"
        android:layout_alignParentStart="true"/>

    <TextView
        android:text="$START"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/reserve_start_dt_edit"
        android:textAppearance="@android:style/TextAppearance.Material.Large"
        android:textAllCaps="false"
        android:fontFamily="sans-serif"
        android:textColor="?android:attr/textColorLink"
        android:layout_below="@+id/reserve_label_start"
        android:layout_alignParentStart="true"/>

    <TextView
        android:text="Park anytime after:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/reserve_label_start"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="14dp"/>

    <TextView
        android:text="Exit anytime before:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/reserve_label_end"
        android:layout_below="@+id/reserve_start_dt_edit"
        android:layout_alignParentStart="true"
        android:layout_marginTop="14dp"/>

    <TextView
        android:text="Warning: Your vehicle will be towed if you did not check out before the end time."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/reserve_warning_text"
        android:textSize="18sp"
        android:textColor="@android:color/holo_red_dark"
        android:textStyle="normal|bold"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:text="Price ($ 10 / Hour)"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:id="@+id/reserve_label_text"
        android:layout_below="@+id/reserve_end_dt_edit"
        android:layout_alignParentStart="true"/>

    <TextView
        android:text="UGx 1500"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/reserve_price_text"
        android:layout_below="@+id/reserve_label_text"
        android:layout_alignParentStart="true"
        android:textAppearance="@android:style/TextAppearance.Material.Large"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/reserve_button"
        android:text="Pay with FreeCard"
        android:layout_below="@+id/reserve_warning_text"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"/>


</RelativeLayout>
